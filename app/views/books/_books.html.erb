    <h2>Books</h2>
    <table class="table table-hover table-inverse">
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
    <% books.each do |book| %>
    <tr>
      <td><%= image_tag @user.get_user_icon(100, 100) %></td>
