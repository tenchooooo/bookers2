    <h2>Books</h2>
    <table class="table table-hover table-inverse">
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
    <% books.each do |book| %>
    <tr>
      <td>
        <%=link_to user_path(book.user.id) do %>
        <%= image_tag book.user.get_profile_image(80, 80) %><br>
        <% end %>
      </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    <% end %>
    </tr>
  </table>

