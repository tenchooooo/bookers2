<%= render 'layouts/flash' %>
<div class="container">
  <%= render 'books/error', book:@book %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'info', user:@user %>
      <%= render 'books/new', book:@book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <!--ユーザ一覧-->
      <h2>Users</h2>
      <table class="table">
        <tr>
          <th>image</th>
          <th>name</th>
        </tr>
        <!--ユーザ一覧-->
        <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
          <td><%= link_to "show",user_path(user.id) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
